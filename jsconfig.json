{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "AMD",
    "target": "ESNext",
    "jsx": "react",
    "checkJs": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "baseUrl": "src"
  },
  "include": ["src", "server"]
}
